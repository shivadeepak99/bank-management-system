<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Details</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #1c1c1c;
            margin: 0;
            padding: 20px;
            color: #ffffff;
        }
        .container {
            background: #2b2b2b;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
            max-width: 1200px;
            margin: 0 auto;
            animation: fadeIn 1s ease-in-out;
        }
        h1 {
            color: #ffcc00;
            text-align: center;
            animation: slideDown 0.8s ease-out;
        }
        .customer-row {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            padding: 20px;
            border: 2px solid #ffcc00;
            margin-bottom: 15px;
            border-radius: 8px;
            background-color: #3b3b3b;
            animation: fadeIn 1s ease-in-out;
        }
        .customer-row div {
            width: 48%;
            margin-bottom: 15px;
        }
        .customer-row div.full-width {
            width: 100%;
        }
        .customer-row div span {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
            color: #ffcc00;
        }
        .password-field {
            display: flex;
            align-items: center;
        }
        .password-field input {
            margin-right: 10px;
            flex-grow: 1;
            padding: 8px;
            background-color: #1e1e1e;
            border: 2px solid #ffcc00;
            color: #ffffff;
            border-radius: 4px;
            transition: border-color 0.3s ease-in-out;
        }
        .password-field input:focus {
            border-color: #00ccff;
        }
        .toggle-btn {
            background-color: #00ccff;
            border: none;
            color: white;
            padding: 8px 12px;
            cursor: pointer;
            border-radius: 4px;
            transition: background-color 0.3s ease-in-out, transform 0.2s ease;
        }
        .toggle-btn:hover {
            background-color: #008bb5;
            transform: scale(1.05);
        }
        .toggle-btn:active {
            background-color: #005f73;
        }
        @media (max-width: 768px) {
            .customer-row div {
                width: 100%;
            }
        }
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        @keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
<body>

<div class="container">
    <h1>Customer Details</h1>
    <% accounts.forEach(function(account, index) { %>
    <div class="customer-row">
        <div>
            <span>Customer ID:</span> <%= account.customer_id %>
        </div>
        <div>
            <span>Phone Number:</span> <%= account.phone_number %>
        </div>
        <div>
            <span>Name:</span> <%= account.name %>
        </div>
        <div>
            <span>Email:</span> <%= account.Email %>
        </div>
        <div>
            <span>Date of Birth:</span> <%= account.dateofbirth %>
        </div>
        <div class="full-width">
            <span>Address:</span> <%= account.address %>, <%= account.city %>, <%= account.state %> - <%= account.pincode %>
        </div>
        <div class="full-width">
            <span>Password:</span>
            <div class="password-field">
                <input type="password" id="password<%= index %>" value="<%= account.password %>" readonly>
                <button class="toggle-btn" onclick="togglePassword(<%= index %>)">Show</button>
            </div>
        </div>
    </div>
    <% }); %>
</div>

<script>
    function togglePassword(index) {
        var passwordInput = document.getElementById("password" + index);
        var toggleBtn = passwordInput.nextElementSibling;

        if (passwordInput.type === "password") {
            passwordInput.type = "text";
            toggleBtn.textContent = "Hide";
        } else {
            passwordInput.type = "password";
            toggleBtn.textContent = "Show";
        }
    }
</script>

</body>
</html>
